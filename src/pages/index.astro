---
import { useCloudState } from "freestyle-sh";
import CreateBoard, { CloudApp } from "../components/CreateBoard.svelte";
import Layout from "../layouts/Layout.astro";

const app = useCloudState(CloudApp);

const boards = await app.getBoards();
---

<Layout title="Freestyle Message Board">
  <CreateBoard boards={boards} client:load />
</Layout>
